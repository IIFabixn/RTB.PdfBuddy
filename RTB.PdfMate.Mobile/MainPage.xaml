<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		     xmlns:vm="clr-namespace:RTB.PdfMate.Mobile.ViewModels"
		     xmlns:pdf="clr-namespace:PdfSharpCore.Pdf;assembly=PdfSharpCore"
			 x:DataType="{x:Type vm:MainPageViewModel}"
             x:Class="RTB.PdfMate.Mobile.MainPage">
    <Grid RowDefinitions="Auto, Auto, *" Padding="10">
        <Grid ColumnDefinitions="Auto, *, Auto">
            <Label Grid.Column="0" Text="Files:" FontSize="Header" />
            <Button Grid.Column="2" VerticalOptions="Center" Command="{Binding OpenFileExplorerCommand}" HorizontalOptions="Center" Text="Import Files" />
        </Grid>
        <HorizontalStackLayout Grid.Row="1" HeightRequest="120">
            <CollectionView 
                ItemsSource="{Binding LoadedDocuments}"
                SelectedItem="{Binding SelectedDocument}"
                ItemsLayout="HorizontalList"
                Margin="0">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type pdf:PdfDocument}">
                        <Grid RowDefinitions="Auto, Auto" Margin="5">
                            <Label Text="{Binding Info.Title}" FontSize="Body" />
                            <Label Text="{Binding FileSize}" FontSize="Caption" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
