{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Launch and Debug Standalone Blazor WebAssembly App",
          "type": "blazorwasm",
          "request": "launch",
          "cwd": "${workspaceFolder}/RTB.PdfBuddy.Web",
          "url": "http://localhost:5217" // Tell launch where to find site
      },
      {
          "name": "Watch",
          "type": "coreclr",
          "request": "launch",
          "cwd": "${workspaceFolder}/RTB.PdfBuddy.Web",
          "program": "dotnet",
          "args": [
              "watch",
              "--project",
              ".",
              "--verbose" // Let's us confirm browser connects with hot reload capabilities
          ],
          "preLaunchTask": "build web", // Ensure we don't watch an unbuilt site
      },
      {
          "name": "Attach",
          "type": "blazorwasm",
          "request": "attach",
          "cwd": "${workspaceFolder}/RTB.PdfBuddy.Web",
          "url": "http://localhost:5217",  // Tell launch where to find site
          "timeout": 120000, // Allows time for the site to launch (2min)
      }
  ],
  "compounds": [
      {
          "name": "Debug with Hot Reload",
          "preLaunchTask": "Kill Port 5217",
          "configurations": [ "Watch", "Attach" ],
          "stopAll": true,
      }
  ]
}