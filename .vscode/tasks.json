{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build web",
      "command": "dotnet",
      "type": "process",
      "args": [
          "build",
          "${workspaceFolder}/RTB.PdfBuddy.Web/RTB.PdfBuddy.Web.csproj",
          "/property:GenerateFullPaths=true",
          "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
        "label": "publish web",
        "command": "dotnet",
        "type": "process",
        "args": [
            "publish",
            "${workspaceFolder}/RTB.PdfBuddy.Web/RTB.PdfBuddy.Web.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary"
        ],
        "problemMatcher": "$msCompile"
    },
    {
        "label": "watch web",
        "command": "dotnet",
        "type": "process",
        "args": [
            "watch",
            "run",
            "${workspaceFolder}/RTB.PdfBuddy.Web/RTB.PdfBuddy.Web.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary"
        ],
        "problemMatcher": "$msCompile",
    },
    {
      "label": "Tailwind Watch",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/RTB.PdfBuddy.Web"
      },
      "command": "npx",
      "args": [
        "@tailwindcss/cli",
        "-i",
        "wwwroot/css/tailwind-input.css",
        "-o",
        "wwwroot/css/tailwind.min.css",
        "--watch"
      ],
      "problemMatcher": [],
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "echo": true,
        "clear": true
      }
    },
    {
      "label": "Kill Port 5217",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "lsof -ti :5217 | xargs kill -9"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "echo": true
      },
      "group": {
        "kind": "none",
        "isDefault": false
      }
    }
  ]
}
