{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
          "build",
          "${workspaceFolder}/RTB.PdfMate.Web/RTB.PdfMate.Web.csproj",
          "/property:GenerateFullPaths=true",
          "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
        "label": "publish",
        "command": "dotnet",
        "type": "process",
        "args": [
            "publish",
            "${workspaceFolder}/RTB.PdfMate.Web/RTB.PdfMate.Web.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary"
        ],
        "problemMatcher": "$msCompile"
    },
    {
        "label": "watch",
        "command": "dotnet",
        "type": "process",
        "args": [
            "watch",
            "run",
            "${workspaceFolder}/RTB.PdfMate.Web/RTB.PdfMate.Web.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary"
        ],
        "problemMatcher": "$msCompile"
    },
    {
      "label": "Run Tailwind Watch",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/RTB.PdfMate.Web"
      },
      "command": "./Tailwind/tailwindcss",
      "args": [
        "-i",
        "wwwroot/css/tailwind-input.css",
        "-o",
        "wwwroot/css/tailwind-min.css",
        "--watch"
      ],
      "problemMatcher": [],
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "echo": true,
        "clear": true
      }
    },
    {
      "label": "Kill Port",
      "type": "shell",
      "command": "lsof",
      "args": [
        "-ti",
        ":5217"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "echo": true
      },
      "group": {
        "kind": "none",
        "isDefault": false
      },
      "dependsOn": [
        {
          "label": "Kill Process",
          "type": "shell",
          "command": "kill",
          "args": ["-9", "$(lsof -ti :5217)"]
        }
      ]
    }
  ],
  "inputs": [
    {
      "id": "solution",
      "type": "pickString",
      "description": "Select the solution to build",
      "options": [
        "RTB.PdfMate.Web",
        "RTB.PdfMate.Mobile"
      ]
    }
  ]
}
